<% if use_ssl == 'true' -%>
<IfModule mod_ssl.c>
    NameVirtualHost *:<%= port %>
    Listen <%= port %>
</IfModule>

<IfModule mod_gnutls.c>
    NameVirtualHost *:<%= port %>
    Listen <%= port %>
</IfModule>
<% else -%>
NameVirtualHost *:<%= port %>
Listen <%= port %>
<% end -%>
